<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.Double?>
<VBox xmlns:fx="http://javafx.com/javafx/1"
      fx:controller="org.example.temperatures.TemperaturesController" alignment="CENTER" spacing="10">
    <Label fx:id="yearLabel" text="Year: 2024" style="-fx-font-size: 20px;"/>
    <AnchorPane>
        <Canvas fx:id="canvas" width="600" height="400"/>
        <Button fx:id="nextYearButton" text="Next">
            <AnchorPane.leftAnchor>
                <Double fx:value="40.0"/>
            </AnchorPane.leftAnchor>
            <AnchorPane.topAnchor>
                <Double fx:value="10.0"/>
            </AnchorPane.topAnchor>
        </Button>
    </AnchorPane>

</VBox>
